{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "AgentCount": 30,
  "DefaultAgentSize": { "width": 40, "height": 40 },
  "EnableRotation": true,
  "MovementSpeed": 1.2,
  "RotationSpeed": 0.08,
  "Rendering": {
    "FillColor": "#60a5fa",
    "StrokeColor": "#3b82f6",
    "StrokeWidth": 2,
    "ActiveGlow": true
  },
  "Sensor": {
    "RayCount": 7,
    "RayLength": 180,
    "DetectFood": true,
    "DetectAgents": true
  },
  "RenderSensor": true,
  "NeuralNetwork": {
    "HiddenLayers": [20, 16, 12],
    "ActivationFunction": "tanh",
    "InitializationMethod": "he",
    "MutationStrategy": "gaussian"
  },
  "FoodSettings": {
    "SpawnCount": 1000,
    "FoodColor": "#fbbf24",
    "FoodRadius": 6,
    "RespawnOnEat": true,
    "SpawnPoint": [0, 0],
    "DriftMinDistance": 2.0,
    "DriftMaxDistance": 3.0,
    "DriftSpeed": 0.01,
    "VariableSizes": true,
    "MinSize": 4,
    "MaxSize": 10
  },
  "ClusterSettings": {
    "ClusterCount": 5,
    "ClusterRadius": 700,
    "ClusterSpacing": 2000
  },
  "LifeStageSettings": {
    "MaturityYears": 40,
    "SenescenceStartPct": 0.85,
    "ReproductionCutoffPct": 0.95,
    "LifeProgressSegments": {
      "Embryo": { "start": 0.0, "end": 0.02 },
      "Child": { "start": 0.02, "end": 0.08 },
      "Adolescent": { "start": 0.08, "end": 0.15 },
      "Adult": { "start": 0.15, "end": 0.85 },
      "Old": { "start": 0.85, "end": 1.0 }
    }
  },
  "ExtinctionMitigation": {
    "MinPopulationForBoost": 10,
    "EmergencySpawnRate": 0.05,
    "ResourceRegenerationRateBoostWhenLowPopulation": 1.5,
    "DiversityBoostOnReseed": true
  },
  "ReproductionSettings": {
    "EnergyMinToReproduce": 35,
    "EnergyMaxCap": 150
  },
  "GeneticTraits": {
    "size": { "min": 20, "max": 60, "default": 40 },
    "movementSpeed": { "min": 0.6, "max": 2.0, "default": 1.2 },
    "acceleration": { "min": 0.5, "max": 1.5, "default": 1.0 },
    "turnRate": { "min": 0.04, "max": 0.15, "default": 0.08 },
    "drag": { "min": 0.7, "max": 1.0, "default": 0.9 },
    "sensorRayCount": { "min": 3, "max": 12, "default": 7 },
    "sensorRayLength": { "min": 100, "max": 300, "default": 180 },
    "sensorPrecision": { "min": 0.5, "max": 2.0, "default": 1.0 },
    "fieldOfView": { "min": 120, "max": 300, "default": 180 },
    "colorVision": { "probability": 0.5 },
    "energyEfficiency": { "min": 0.5, "max": 1.5, "default": 1.0 },
    "digestionRate": { "min": 0.7, "max": 1.3, "default": 1.0 },
    "maxEnergyCapacity": { "min": 80, "max": 150, "default": 100 },
    "mutationRate": { "min": 0.005, "max": 0.05, "default": 0.02 },
    "reproductionThreshold": { "min": 40, "max": 80, "default": 60 },
    "offspringCount": { "min": 1, "max": 3, "default": 2 },
    "learningRate": { "min": 0.5, "max": 2.0, "default": 1.0 },
    "memoryNeurons": { "min": 0, "max": 8, "default": 0 },
    "aggression": { "min": 0.0, "max": 2.0, "default": 1.0 }
  }
}
