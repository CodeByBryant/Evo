{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "AgentCount": 15,
  "DefaultAgentSize": { "width": 40, "height": 40 },
  "EnableRotation": true,
  "MovementSpeed": 1.2,
  "RotationSpeed": 0.08,
  "Rendering": {
    "FillColor": "#60a5fa",
    "StrokeColor": "#3b82f6",
    "StrokeWidth": 2,
    "ActiveGlow": true
  },
  "Sensor": {
    "RayCount": 7,
    "RayLength": 180,
    "DetectFood": true,
    "DetectAgents": true
  },
  "RenderSensor": true,
  "NeuralNetwork": {
    "HiddenLayers": [20, 16, 12],
    "ActivationFunction": "tanh",
    "InitializationMethod": "he",
    "MutationStrategy": "gaussian"
  },
  "FoodSettings": {
    "SpawnCount": 30,
    "FoodColor": "#fbbf24",
    "FoodRadius": 6,
    "RespawnOnEat": true
  }
}
